<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lets_see"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/remote_button"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/remoteBT" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/remote"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/remoteBT"
        android:layout_marginStart="0dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/mapping_button"
        android:layout_centerVertical="true"
        android:layout_marginStart="220dp"
        android:id="@+id/mappingBT" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/mapping"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/mappingBT"
        android:layout_alignEnd="@+id/mappingBT"
        android:textAlignment="center"/>


</RelativeLayout>